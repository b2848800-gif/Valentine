<!-- Typing animation -->
<script>
const text = "I love you so much Ladau... You are my happiness ❤️";
let i = 0;

function typingEffect() {
  if (i < text.length) {
    document.getElementById("typing").innerHTML += text.charAt(i);
    i++;
    setTimeout(typingEffect, 60);
  }
}

typingEffect();
</script>

