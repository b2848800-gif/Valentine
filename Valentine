<script>
let current = 1;

function next() {
  document.getElementById("s"+current).classList.remove("active");
  current++;
  document.getElementById("s"+current).classList.add("active");
  counter();
}

/* Emoji reaction */
function react(el) {
  if (el.querySelector(".reaction")) return;
  const r = document.createElement("span");
  r.className = "reaction";
  r.innerHTML = "‚ù§Ô∏è";
  el.appendChild(r);
}

/* Kiss animation */
function sendKiss() {
  for (let i = 0; i < 6; i++) {
    const kiss = document.createElement("div");
    kiss.className = "kiss";
    kiss.innerHTML = "üòò";
    kiss.style.left = Math.random()*90 + "vw";
    kiss.style.bottom = "0px";
    document.body.appendChild(kiss);
    setTimeout(()=>kiss.remove(),2000);
  }
}

/* Quiz */
function correct() {
  alert("Correct ‚ù§Ô∏è");
  next();
}

function wrong() {
  alert("Nooo üòÑ Try again");
}

/* Love counter */
function counter() {
  const startDate = new Date("May 25, 2024");
  const today = new Date();
  const days = Math.floor((today - startDate)/(1000*60*60*24));
  const el = document.getElementById("days");
  if (el) el.innerText = "Together for " + days + " days ‚ù§Ô∏è";
}

/* Mini heart game */
let score = 0;
const area = document.getElementById("gameArea");

setInterval(() => {
  if (!area) return;
  const heart = document.createElement("div");
  heart.className = "heart";
  heart.innerHTML = "‚ù§Ô∏è";
  heart.style.left = Math.random()*90 + "%";
  heart.style.top = Math.random()*90 + "%";

  heart.onclick = () => {
    score++;
    document.getElementById("score").innerText = score;
    heart.remove();
  };

  area.appendChild(heart);
  setTimeout(()=>heart.remove(),2000);
}, 800);
</script>

